@{
    ViewData["Title"] = "Most Popular movies";
}

@model MoviesTool.Web.Models.MovieViewModel

    <div class="card" style="max-width: 800px;">
        <div class="row" style="padding-bottom: 1rem !important;">
            <div class="col-lg-12 mx-auto">
                <div class="text-black-50 p-5 shadow-sm rounded banner">
                    <h1 class="display-4">Movie's details</h1>
                </div>
            </div>
        </div>

        <div class="row g-0">
            <div class="col-sm-4">
                <img src="https://www.themoviedb.org/t/p/w220_and_h330_face/@Model.Poster" class="rounded-start" alt="Card image">
            </div>

            <div class="title ott_false" style="max-width: 540px;">
                <div class="h6">@Model.Title</div>
                <div class="facts">
                    <span class="certification">Genres:</span>
                    @if(@Model.Genres.Count>0)
                    {
                    <span class="genres">
                        @foreach (var item in @Model.Genres)
                        {
                            <a href="#">@item.Name</a><span class="runtime">,</span>
                        }
                    </span>
                    }
                    <span class="runtime">@Model.Runtime min</span>
                </div>
                <div style="">
                    <div class="certification" style="font-weight: 700;">Overview:</div>
                    <div class="certification" style="color: #6c757d !important; font-weight: 400; ">@Model.Description</div>
                </div>
            </div>
        </div>
    </div>